{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "default": "1.0"
        },
        "models": {
            "type": "object",
            "patternProperties": {
                "^[A-Z][a-zA-Z0-9]*$": {
                    "type": "object",
                    "properties": {
                        "relationships": {
                            "type": "object",
                            "properties": {
                                "belongsTo": { "type": "string" },
                                "hasMany": { "type": "string" },
                                "hasOne": { "type": "string" },
                                "belongsToMany": { "type": "string" },
                                "morphTo": { "type": "string" },
                                "morphMany": { "type": "string" }
                            }
                        },
                        "seeder": {
                            "type": "object",
                            "properties": {
                                "category": {
                                    "enum": ["essential", "development", "production"]
                                },
                                "count": { "type": "integer", "minimum": 0 },
                                "json": { "type": "boolean" }
                            }
                        },
                        "softDeletes": { "type": "boolean" },
                        "timestamps": { "type": "boolean" },
                        "traits": {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    },
                    "additionalProperties": true
                }
            },
            "additionalProperties": false
        },
        "actions": {
            "type": "object",
            "additionalProperties": true
        },
        "pages": {
            "type": "object",
            "additionalProperties": true
        },
        "routes": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}
